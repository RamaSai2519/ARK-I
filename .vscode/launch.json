{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Ark",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "ENV": "local"
            },
            "args": [
                "run",
                "--port",
                "5000"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}